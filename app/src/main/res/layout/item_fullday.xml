<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_fullday_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:text="周二"
        android:textColor="#fff"
        android:textSize="14sp" />

    <com.xfshipan.weather.view.CustomRecycleView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_fullday_weather"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_fullday_time"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_sunny_big" />

    <TextView
        android:id="@+id/tv_fullday_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_fullday_weather"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="11"
        android:textColor="#fff"
        android:textSize="14sp" />

</RelativeLayout>