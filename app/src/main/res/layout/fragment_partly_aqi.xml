<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_aqi_divider"
        style="@style/Line.Vertical"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_aqi_divider"
        android:layout_toRightOf="@id/iv_aqi_divider"
        android:orientation="vertical">

        <com.xfshipan.weather.view.WeatherTypefacedTextView
            android:id="@+id/tv_realtime_aqiquality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----"
            android:textColor="#fff"
            android:textSize="14sp" />

        <com.xfshipan.weather.view.WeatherTypefacedTextView
            android:id="@+id/tv_realtime_pm25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----"
            android:textColor="#fff"
            android:textSize="14sp" />

        <com.xfshipan.weather.view.WeatherTypefacedTextView
            android:id="@+id/tv_realtime_wd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----"
            android:textColor="#fff"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>